<h2>Patients</h2>
<%= link_to "New", new_patient_path, class: 'btn btn-primary btn-sm m-1' %>
<% @patients.each do |patient| %>
    <div>
    <%= link_to "Show",patient_path(id: patient.id), class: 'btn btn-primary btn-sm m-1' %> 
    <%= link_to "Edit",edit_patient_path(id: patient.id), class: 'btn btn-primary btn-sm m-1' %>
    <%= link_to "Delete",patient_path(id: patient.id),method: :delete,
    data: { confirm: "Are you sure?" }, class: 'btn btn-primary btn-sm m-1' %> <%= patient.first_name %> <%= patient.last_name %> 
    <%= patient.email %> <%= patient.phone %>
    </div>
<% end %>