<form action="/contacts/edit" method="post">
    <input type="text" name="first_name" placeholder="First Name" value="<%= @contact.first_name%>">
    <input type="text" name="last_name" placeholder="Last Name" value="<%= @contact.last_name%>">
    <input type="text" name="phone" placeholder="Phone Number" value="<%= @contact.phone%>">
    <input type="email" name="email" placeholder="Email Address" value="<%= @contact.email%>"><br>
    <input type="text" name="address" placeholder="Address" value="<%= @contact.address%>">
    <input type="text" name="city" placeholder="City" value="<%= @contact.city%>">
    <input type="text" name="state" placeholder="State" value="<%= @contact.state%>">
    <input type="text" name="zip" placeholder="Zip Code" value="<%= @contact.zip%>">
    <input type="hidden" name="id" value="<%= @contact.id%>">
    <input type="submit" value="Save"> 
</form>